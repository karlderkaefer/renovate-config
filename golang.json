{
  "extends": [
    "config:base",
    "group:monorepos"
  ],
  "prHourlyLimit": 10,
  "rebaseWhen": "auto",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchDatasources": ["go"],
      "groupName": ["golang dependencies"]
    },
    {
      "depTypeList": ["devDependencies"],
      "automerge": true
    }
  ]
}
